{
  "compilerOptions": {
    "baseUrl": ".",
    /* Language and Environment */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "experimentalDecorators": false,
  },
  "include": [
    "src/**/*.ts" ,
  ],
  "exclude": [
    "node_modules"
  ]
}